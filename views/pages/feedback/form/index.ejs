<div class="feedback_MainF">
  <div class="feed_Feedback">
    <h1>Send Message Us</h1>
    <% if (locals.errors) { %>
    <div class="alert alert-danger">
      <ul>
        <% errors.foreach(function(error){ %>
        <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
    <% } else if(locals.successMessage) { %>
    <div class="alert alert-success">
      <%= successMessage %>
    </div>
    <% } %>
    <form action="/feedback" method="POST" class="">
      <div class="arrenged">
        <label for="name">Full name :</label>
        <input
          type="text"
          placeholder="Your Name"
          name="name"
          id="name"
          required
          pattern="{3, 33}"
        />
      </div>
      <div class="arrenged">
        <label for="mobile">Mobile :</label>
        <input
          type="text"
          placeholder="Your Mobile Number"
          name="mobile"
          id="mobile"
          pattern="{10,20}"
        />
      </div>
      <div class="arrenged">
        <label for="email">E-mail :</label>
        <input type="email" placeholder="Your E-mail" name="email" id="email" required />
      </div>
      <div class="arrenged">
        <label for="subject">Subject :</label>
        <input
          type="text"
          placeholder="Subject"
          name="subject"
          id="subject"
          required
          pattern="{6,22}"
        />
      </div>
      <div class="arrenged">
        <label for="message">Message :</label>
        <textarea
          name="message"
          id="message"
          cols="22"
          rows="10"
          placeholder="Message..."
          required
        ></textarea>
      </div>
      <div>
        <input type="submit" name="submit" id="submit" required />
      </div>
    </form>
  </div>
</div>
